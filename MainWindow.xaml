<Window x:Class="FileReadWriteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Read/Write Example" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="TextInput" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Height="100" Margin="10" TextWrapping="Wrap"/>
        <Button Content="Save to File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,120,0,0" Click="SaveToFile_Click"/>
        <Button Content="Read from File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="120,120,0,0" Click="ReadFromFile_Click"/>
        <TextBlock x:Name="FileContentDisplay" HorizontalAlignment="Left" VerticalAlignment="Top" Width="350" Height="100" Margin="10,160,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
